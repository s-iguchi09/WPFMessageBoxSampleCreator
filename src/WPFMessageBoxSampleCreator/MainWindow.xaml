<Window
    x:Class="WPFMessageBoxSampleCreator.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:about="clr-namespace:WPFMessageBoxSampleCreator.Features.About"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:home="clr-namespace:WPFMessageBoxSampleCreator.Features.Home"
    xmlns:interfaces="clr-namespace:WPFMessageBoxSampleCreator.Core.Interfaces"
    xmlns:local="clr-namespace:WPFMessageBoxSampleCreator"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:messagebox="clr-namespace:WPFMessageBoxSampleCreator.Features.MessageBoxSampleCreator"
    xmlns:system="clr-namespace:System;assembly=mscorlib"
    Title="WPFMessageBoxSampleCreator"
    Width="800"
    Height="350"
    d:DataContext="{d:DesignInstance local:MainWindowViewModel,
                                     IsDesignTimeCreatable=True}"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Window.Resources>
        <home:HomeViewModel x:Key="HomeViewModel" />
        <messagebox:MessageBoxSampleCreatorViewModel x:Key="MessageBoxSampleCreatorViewModel" />
        <about:AboutViewModel x:Key="AboutViewModel" />
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <ListBox
            x:Name="ContentsSelector"
            Grid.Column="0"
            SelectedIndex="0"
            SelectionMode="Single">
            <ListBox.Items>
                <ListBoxItem Content="{StaticResource HomeViewModel}" />
                <ListBoxItem Content="{StaticResource MessageBoxSampleCreatorViewModel}" />
                <ListBoxItem Content="{StaticResource AboutViewModel}" />
            </ListBox.Items>
        </ListBox>
        <Border
            Grid.Column="1"
            BorderBrush="{Binding BorderBrush, ElementName=ContentsSelector}"
            BorderThickness="1">
            <Border.Resources>
                <DataTemplate DataType="{x:Type home:HomeViewModel}">
                    <home:HomeControl DataContext="{StaticResource HomeViewModel}" />
                </DataTemplate>
                <DataTemplate DataType="{x:Type messagebox:MessageBoxSampleCreatorViewModel}">
                    <messagebox:MessageBoxSampleCreatorControl DataContext="{StaticResource MessageBoxSampleCreatorViewModel}" />
                </DataTemplate>
                <DataTemplate DataType="{x:Type about:AboutViewModel}">
                    <about:AboutControl DataContext="{StaticResource AboutViewModel}" />
                </DataTemplate>
            </Border.Resources>
            <ContentControl Content="{Binding SelectedItem.Content, ElementName=ContentsSelector}" />
        </Border>
    </Grid>
</Window>
