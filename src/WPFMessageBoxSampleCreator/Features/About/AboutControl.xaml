<UserControl
    x:Class="WPFMessageBoxSampleCreator.Features.About.AboutControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WPFMessageBoxSampleCreator.Features.About"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DataContext="{d:DesignInstance local:AboutViewModel,
                                     IsDesignTimeCreatable=True}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  アプリ名 & バージョン  -->
        <StackPanel Grid.Row="0" VerticalAlignment="Center">
            <TextBlock
                FontSize="20"
                FontWeight="Bold"
                Text="{Binding AppTitle}" />
            <TextBlock
                FontSize="14"
                Foreground="#666"
                Text="{Binding AppVersion}" />
        </StackPanel>

        <!--  リンク類  -->
        <StackPanel Grid.Row="1" Margin="5,10">
            <TextBlock>
                <Hyperlink NavigateUri="https://github.com/s-iguchi09/WPFMessageBoxSampleCreator" RequestNavigate="Hyperlink_RequestNavigate">
                    GitHub
                </Hyperlink>
            </TextBlock>

            <TextBlock>
                <Hyperlink NavigateUri="mailto:siguchi09@gmail.com" RequestNavigate="Hyperlink_RequestNavigate">
                    Contact
                </Hyperlink>
            </TextBlock>

        </StackPanel>

        <!--  ライセンス情報（スクロール）  -->
        <Border
            Grid.Row="2"
            Margin="5"
            Padding="5"
            BorderBrush="#DDD"
            BorderThickness="1">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <TextBlock Text="{Binding LicenseText}" TextWrapping="Wrap" />
            </ScrollViewer>
        </Border>
    </Grid>
</UserControl>
