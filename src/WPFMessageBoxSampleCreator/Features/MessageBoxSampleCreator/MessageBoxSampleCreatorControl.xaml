<UserControl x:Class="WPFMessageBoxSampleCreator.Features.MessageBoxSampleCreator.MessageBoxSampleCreatorControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFMessageBoxSampleCreator.Features.MessageBoxSampleCreator"
             xmlns:sys="clr-namespace:System;assembly=netstandard"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance local:MessageBoxSampleCreatorViewModel, IsDesignTimeCreatable=True}"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <ObjectDataProvider
            x:Key="MessageBoxButtonDataSource"
            MethodName="GetValues"
            ObjectType="{x:Type sys:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="MessageBoxButton" />
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
        <ObjectDataProvider
            x:Key="MessageBoxResultDataSource"
            MethodName="GetValues"
            ObjectType="{x:Type sys:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="MessageBoxResult" />
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
        <ObjectDataProvider
            x:Key="MessageBoxOptionsDataSource"
            MethodName="GetValues"
            ObjectType="{x:Type sys:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="MessageBoxOptions" />
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>

    </UserControl.Resources>
    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="80" />
        </Grid.RowDefinitions>
        <TextBlock
            Grid.Row="0"
            Grid.Column="0"
            Margin="5"
            VerticalAlignment="Center"
            Text="MessageBoxText :" />
        <TextBox
            Grid.Row="0"
            Grid.Column="1"
            Margin="5"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            AcceptsReturn="True"
            Text="{Binding MessageBoxText, UpdateSourceTrigger=PropertyChanged, FallbackValue={x:Static sys:String.Empty}, TargetNullValue={x:Static sys:String.Empty}}"
            VerticalScrollBarVisibility="Auto" />
        <TextBlock
            Grid.Row="1"
            Grid.Column="0"
            Margin="5"
            VerticalAlignment="Center"
            Text="Caption : " />
        <TextBox
            Grid.Row="1"
            Grid.Column="1"
            Margin="5"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Center"
            Text="{Binding Caption, UpdateSourceTrigger=PropertyChanged, FallbackValue={x:Static sys:String.Empty}, TargetNullValue={x:Static sys:String.Empty}}" />
        <TextBlock
            Grid.Row="2"
            Grid.Column="0"
            Margin="5"
            VerticalAlignment="Center"
            Text="MessageBoxButton : " />
        <ComboBox
            Grid.Row="2"
            Grid.Column="1"
            Margin="5"
            IsEditable="False"
            ItemsSource="{Binding Source={StaticResource MessageBoxButtonDataSource}}"
            SelectedIndex="1"
            SelectedItem="{Binding MessageBoxButton}" />
        <TextBlock
            Grid.Row="3"
            Grid.Column="0"
            Margin="5"
            VerticalAlignment="Center"
            Text="MessageBoxImage : " />
        <ComboBox
            Grid.Row="3"
            Grid.Column="1"
            Margin="5"
            DisplayMemberPath="Key"
            IsEditable="False"
            ItemsSource="{Binding MessageBoxImagePair}"
            SelectedIndex="1"
            SelectedValue="{Binding MessageBoxImage}"
            SelectedValuePath="Value" />
        <TextBlock
            Grid.Row="4"
            Grid.Column="0"
            Margin="5"
            VerticalAlignment="Center"
            Text="MessageBoxResult : " />
        <ComboBox
            Grid.Row="4"
            Grid.Column="1"
            Margin="5"
            IsEditable="False"
            ItemsSource="{Binding Source={StaticResource MessageBoxResultDataSource}}"
            SelectedIndex="1"
            SelectedItem="{Binding MessageBoxResult}" />
        <TextBlock
            Grid.Row="5"
            Grid.Column="0"
            Margin="5"
            VerticalAlignment="Center"
            Text="MessageBoxOptions : " />
        <ComboBox
            Grid.Row="5"
            Grid.Column="1"
            Margin="5"
            IsEditable="False"
            ItemsSource="{Binding Source={StaticResource MessageBoxOptionsDataSource}}"
            SelectedIndex="1"
            SelectedItem="{Binding MessageBoxOptions}" />
        <TextBlock
            Grid.Row="6"
            Grid.Column="0"
            Margin="5"
            Text="" />
        <Button
            x:Name="ShowMessageBox"
            Grid.Row="7"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Margin="5"
            Click="ShowMessageBox_Click">
            Show MessageBox.
        </Button>

    </Grid>
</UserControl>
